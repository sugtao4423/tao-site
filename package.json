{
  "name": "tao-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "rm -rf .next && next dev",
    "build": "rm -rf .next && next build",
    "build:standalone": "rm -rf .next && next build && cd .next/standalone/ && ln -s ../../public . && cd .next/ && ln -s ../../static .",
    "zip:standalone": "cd .next/standalone/ && zip -rq ../../tao-site.zip .",
    "start": "next start",
    "start:standalone": "node .next/standalone/server.js",
    "lint": "eslint --max-warnings=0 .",
    "stylelint": "stylelint '{**/*,*}.{css,scss}'",
    "stylelint:fix": "stylelint --fix '{**/*,*}.{css,scss}'",
    "prettier": "prettier --check '{**/*,*}.{js,jsx,mjs,ts,tsx,css,scss,json}'",
    "prettier:fix": "prettier --write '{**/*,*}.{js,jsx,mjs,ts,tsx,css,scss,json}'"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bootstrap": "5.3.2",
    "classnames": "^2.5.1",
    "next": "15.5.6",
    "nuqs": "^2.7.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "server-only": "^0.0.1",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/node": "^20.17.30",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.24.0",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.5.3",
    "sass": "^1.86.3",
    "stylelint": "^16.18.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}
